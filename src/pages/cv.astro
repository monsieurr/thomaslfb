<!-- SCOPED STYLES: Matches your Global CSS visuals but handles CV layout -->
<style>
    /* Navigation Bar */
    .cv-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    /* Header Specifics */
    .cv-header {
        text-align: left; /* Overrides global center alignment for CV header */
        margin-bottom: 1rem;
    }
    
    .role {
        font-size: 1.2rem;
        color: #1a73e8; /* Your Blue */
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .contact-info {
        color: #666;
        font-size: 0.95rem;
    }

    /* Skills Grid */
    .skills-section {
        display: flex;
        gap: 2rem;
        margin-bottom: 2rem;
    }
    
    .skill-column {
        flex: 1;
    }

    /* Job Card Tweaks */
    .job-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 0.2rem;
    }

    .job-header h3 {
        margin-bottom: 0;
        font-size: 1.1rem;
    }

    .date {
        font-size: 0.9rem;
        color: #777;
        font-weight: 500;
    }

    .company {
        color: #1a73e8; /* Your Blue */
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .sub-job {
        margin-top: 1rem;
        padding-top: 0.5rem;
        border-top: 1px dashed #e0e0e0;
    }
    
    .sub-job p {
        margin-bottom: 0;
        font-size: 0.95rem;
    }

    /* Education List */
    .education-list {
        list-style: none;
        padding-left: 0;
        margin-bottom: 0;
    }
    
    .education-list li {
        margin-bottom: 0.5rem;
        color: #444;
    }

    /* Responsive */
    @media (max-width: 600px) {
        .skills-section {
            flex-direction: column;
            gap: 1rem;
        }
        
        .job-header {
            flex-direction: column;
        }
    }

    /* PRINT STYLES - Clean PDF generation */
    @media print {
        .cv-nav { display: none; }
        body { background-color: #fff; }
        main { max-width: 100%; padding: 0; margin: 0; }
        section.card {
            border: none; /* Remove blue border for print to save ink/cleaner look */
            box-shadow: none;
            padding: 0;
            margin-bottom: 2rem;
        }
        h1 { color: #000; font-size: 2rem; }
        h2 { color: #000; border-bottom: 1px solid #ccc; padding-bottom: 0.5rem; }
        a { text-decoration: none; color: #000; }
    }
</style>